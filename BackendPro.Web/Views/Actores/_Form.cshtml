@model BackendPro.Web.Models.ActorFormViewModel

<input asp-for="Id" type="hidden" />

<div class="panel">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="Nombre" class="form-label"></label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Biografia" class="form-label"></label>
            <textarea asp-for="Biografia" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Biografia" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="FechaNacimiento" class="form-label"></label>
            <input asp-for="FechaNacimiento" class="form-control" />
            <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
        </div>
</div>
