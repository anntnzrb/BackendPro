@model IEnumerable<BackendPro.Core.DTOs.ResenaDto>

<div class="resenas-container">
    @if (Model.Any())
    {
        <div class="row mb-4">
            <div class="col-12">
                <h5>Reseñas (@Model.Count())</h5>
            </div>
        </div>
        
        @foreach (var resena in Model.OrderByDescending(r => r.FechaPublicacion))
        {
            <div class="card mb-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <h6 class="card-title mb-0">@resena.Autor</h6>
                        <small class="text-muted">@resena.FechaPublicacion.ToString("dd/MM/yyyy")</small>
                    </div>
                    <div class="mb-2">
                        @for (int i = 1; i <= 5; i++)
                        {
                            <span class="@(i <= resena.Calificacion ? "text-warning" : "text-muted")">★</span>
                        }
                        <span class="ms-2">@resena.Calificacion/5</span>
                    </div>
                    <p class="card-text">@resena.Comentario</p>
                </div>
            </div>
        }
    }
    else
    {
        <div class="text-center text-muted">
            <p>Aún no hay reseñas para esta película.</p>
            <p>¡Sé el primero en dejar una reseña!</p>
        </div>
    }
</div>
