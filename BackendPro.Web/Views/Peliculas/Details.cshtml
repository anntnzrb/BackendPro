@model BackendPro.Core.DTOs.PeliculaDto
@{
    ViewData["Title"] = Model.Titulo;
    var actores = Model.Actores.Where(a => !string.IsNullOrWhiteSpace(a.Nombre)).ToList();
}

<section class="toolbar">
    <div>
        <h2><i class="fas fa-clapperboard"></i> @Model.Titulo</h2>
        <p>Ficha técnica completa de la película seleccionada.</p>
    </div>
    <div class="toolbar-actions">
        <a class="btn btn-outline-secondary btn-sm" asp-action="Edit" asp-route-id="@Model.Id" aria-label="Editar"><i class="fas fa-pen"></i></a>
        <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@Model.Id" aria-label="Eliminar"><i class="fas fa-trash"></i></a>
        <a class="btn btn-outline-secondary btn-sm" asp-action="Index" aria-label="Volver"><i class="fas fa-arrow-left"></i></a>
    </div>
</section>

<section class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <tbody>
            <tr>
                <th>Título</th>
                <td>@Model.Titulo</td>
            </tr>
            <tr>
                <th>Género</th>
                <td>@Model.Genero.Nombre</td>
            </tr>
            <tr>
                <th>Director</th>
                <td>@Model.Director.Nombre</td>
            </tr>
            <tr>
                <th>Duración</th>
                <td>@Model.Duracion min</td>
            </tr>
            <tr>
                <th>Estreno</th>
                <td>@Model.FechaEstreno.ToString("dd/MM/yyyy")</td>
            </tr>
            <tr>
                <th>Sinopsis</th>
                <td>@(string.IsNullOrWhiteSpace(Model.Sinopsis) ? "Sin sinopsis disponible." : Model.Sinopsis)</td>
            </tr>
            <tr>
                <th>Reparto</th>
                <td>
                    @(actores.Any() ? string.Join(", ", actores.Select(a => a.Nombre)) : "-")
                </td>
            </tr>
        </tbody>
    </table>
</section>
