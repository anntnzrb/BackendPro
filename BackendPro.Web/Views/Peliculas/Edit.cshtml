@model BackendPro.Web.Models.PeliculaFormViewModel
@{
    ViewData["Title"] = "Editar película";
}

<section class="toolbar">
    <div>
        <h2><i class="fas fa-clapperboard"></i> Editar película</h2>
        <p>Actualiza la ficha de la película seleccionada.</p>
    </div>
    <div class="toolbar-actions">
        <a class="btn btn-outline-secondary btn-sm" asp-action="Index" aria-label="Volver"><i class="fas fa-arrow-left"></i></a>
    </div>
</section>

<form asp-action="Edit" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data" class="mt-3">
    <partial name="_Form" model="Model" />
    <div class="d-flex justify-content-between">
        <a class="btn btn-outline-secondary" asp-action="Index" aria-label="Cancelar"><i class="fas fa-ban"></i></a>
        <button type="submit" class="btn btn-primary" aria-label="Guardar cambios"><i class="fas fa-save"></i></button>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
