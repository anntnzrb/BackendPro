@model BackendPro.Web.Models.GeneroFormViewModel
@{
    ViewData["Title"] = "Nuevo género";
}

<section class="toolbar">
    <div>
        <h2><i class="fas fa-tags"></i> Registrar género</h2>
        <p>Define un nuevo género cinematográfico para clasificar las películas.</p>
    </div>
    <div class="toolbar-actions">
        <a class="btn btn-outline-secondary btn-sm" asp-action="Index" aria-label="Volver"><i class="fas fa-arrow-left"></i></a>
    </div>
</section>

<form asp-action="Create" method="post" class="mt-3">
    <partial name="_Form" model="Model" />
    <div class="d-flex justify-content-between">
        <a class="btn btn-outline-secondary" asp-action="Index" aria-label="Cancelar"><i class="fas fa-ban"></i></a>
        <button type="submit" class="btn btn-primary" aria-label="Guardar"><i class="fas fa-save"></i></button>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
