@model BackendPro.Web.Models.GeneroDetailsViewModel
@{
    ViewData["Title"] = "Eliminar género";
    var genero = Model.Genero;
    var tienePeliculas = Model.Peliculas.Any();
}

<section class="toolbar">
    <div>
        <h2><i class="fas fa-tags"></i> Eliminar género</h2>
        <p>Confirma si deseas eliminar el género seleccionado.</p>
    </div>
    <div class="toolbar-actions">
        <a class="btn btn-outline-secondary btn-sm" asp-action="Index" aria-label="Volver"><i class="fas fa-arrow-left"></i></a>
    </div>
</section>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <h3 class="h5 mb-2"><i class="fas fa-tag"></i> @genero.Nombre</h3>
        <p class="text-muted mb-3">@(string.IsNullOrWhiteSpace(genero.Descripcion) ? "Sin descripción registrada." : genero.Descripcion)</p>
        @if (tienePeliculas)
        {
            <div class="alert alert-warning">
                <i class="fas fa-triangle-exclamation me-2"></i>
                El género está asociado a las siguientes películas. Debes reasignarlas o eliminarlas antes de continuar.
            </div>
            <ul class="list-unstyled mb-0">
                @foreach (var pelicula in Model.Peliculas)
                {
                    <li><i class="fas fa-film me-2"></i>@pelicula.Titulo (@pelicula.FechaEstreno:dd/MM/yyyy)</li>
                }
            </ul>
        }
        else
        {
            <div class="alert alert-warning mb-0">
                <i class="fas fa-triangle-exclamation me-2"></i>
                Esta acción eliminará el género del catálogo.
            </div>
        }
        <div asp-validation-summary="ModelOnly" class="text-danger mt-3"></div>
    </div>
</div>

<form asp-action="Delete" asp-route-id="@genero.Id" method="post" class="d-flex justify-content-between">
    <a class="btn btn-outline-secondary" asp-action="Index" aria-label="Cancelar"><i class="fas fa-ban"></i></a>
    <button type="submit" class="btn btn-danger" @(tienePeliculas ? "disabled" : string.Empty) aria-label="Eliminar"><i class="fas fa-trash"></i></button>
</form>
