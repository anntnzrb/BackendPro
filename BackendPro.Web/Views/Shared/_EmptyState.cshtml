@model BackendPro.Web.Models.EmptyStateViewModel

<div class="empty-state">
    <div class="icon-wrapper">
        <i class="@Model.Icon"></i>
    </div>
    <h3>@Model.Title</h3>
    <p>@Model.Description</p>
    @if (!string.IsNullOrWhiteSpace(Model.ActionText) && !string.IsNullOrWhiteSpace(Model.ActionUrl))
    {
        <a class="btn btn-primary" href="@Model.ActionUrl">
            @Model.ActionText
        </a>
    }
</div>
